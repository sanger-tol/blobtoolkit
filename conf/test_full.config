/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/blobtoolkit -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input = "${projectDir}/assets/full_samplesheet.csv"
    fasta = "/lustre/scratch123/tol/projects/.sandbox/data/fungi/Laetiporus_sulphureus/assembly/release/gfLaeSulp1.1/insdc/GCA_927399515.1.fasta.gz"

    // goat_taxon_search
    taxon = 'Laetiporus sulphureus'
    taxa_file = ''

    // BUSCO
    busco_lineages_path = '/lustre/scratch123/tol/resources/busco/v5/'

    // diamond_blastp
    diamondblastp_db = '/lustre/scratch123/tol/teams/tolit/users/ar34/diamond_reduced/gfLaeSulp1.1.buscogenes.dmnd'

    // GCA accession or path to YAML file
    accession = 'GCA_927399515.1'
    yaml = ''

    // Blobdir
    ncbi_taxdump = '/lustre/scratch123/tol/teams/grit/geval_pipeline/btk_databases/taxdump'
}
